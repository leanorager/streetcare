---
// Henter parametrene fra Astro.props
const { teksttype = "p_base_reg", stylingclasses = "" } = Astro.props;

// Fælles styling for ALLE teksttyper
const baseClasses = "text-black";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  p_small_reg: "text-[14px] lg:text-[14px] font-normal",
  p_base_reg: "text-[16px] lg:text-[16px] font-normal",
  p_base_med: "text-[16px] lg:text-[16px] font-medium",
  p_large_reg: "text-[18px] lg:text-[18px] font-normal",
  p_large_med: "text-[18px] lg:text-[18px] font-medium",
  brand_label: "text-[20px] lg:text-[20px] font-semibold leading-[1]",
};
---

<p class:list={[baseClasses, sizeClasses[teksttype], stylingclasses]}>
  <slot />
</p>

---
import Heading from "./Heading.astro";
import Text from "./Text.astro";

interface Props {
  /** Overskrift */
  title: string;

  /** Liste af punkter */
  items: string[];

  /** SVG-ikon pr. punkt (valgfrit) */
  iconSrc?: string;

  /** Ekstra classes (valgfrit) */
  className?: string;
}

const {
  title,
  items,
  iconSrc = "/svg/checkmark.svg",
  className = "",
} = Astro.props;
---

<section class={`w-full ${className}`}>
  <!-- Overskrift -->
  <Heading htmlheading="h5" size="h5">
    {title}
  </Heading>

  <!-- Liste -->
  <ul class="mt-[20px] flex flex-col gap-[10px]">
    {
      items.map((item) => (
        <li class="flex items-start gap-3 pb-[10px] border-b border-grey70/70">
          <img
            src={iconSrc}
            alt=""
            class="mt-[2px] h-5 w-5 flex-shrink-0"
            aria-hidden="true"
          />
          <Text teksttype="p_base_reg">{item}</Text>
        </li>
      ))
    }
  </ul>
</section>

---
/**
 * Props:
 * htmlheading → hvilken HTML-tag (h1, h2 ...)
 * size → styrer visuel størrelse (h1, h2 ...)
 * font → "display" | "sans" (valgfri – auto vælger display til h1)
 * stylingclasses → ekstra Tailwind klasser
 */

// Henter parametrene fra Astro.props
let {
  htmlheading = "h2",
  size = "h2",
  font,
  stylingclasses = "",
} = Astro.props;

const Htmlheading = htmlheading;

// Hvis font ikke er sat manuelt, vælg display-font til h1, ellers sans
if (!font) {
  font = size === "h1" ? "display" : "sans";
}

// Tailwind classes for de forskellige størrelser.
const sizeClasses = {
  h1: "text-[60px] lg:text-[120px] font-normal",
  h2: "text-[30px] lg:text-[40px] font-medium",
  h3: "text-[20px] lg:text-[30px] font-medium",
  h4: "text-[24px] lg:text-[35px] font-semibold",
  h5: "text-[18px] lg:text-[20px] font-medium",
  h6: "text-[16px] lg:text-[16px] font-semibold",
};

// Tailwind classes for skrifttyper
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
};
---

<Htmlheading
  class:list={[
    sizeClasses[size], // visuel størrelse
    fontClasses[font], // display eller sans
    stylingclasses, // evt. overrides
  ]}
>
  <slot />
</Htmlheading>
